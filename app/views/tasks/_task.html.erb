<tr class="task">
  <td>
    <label id="<%= dom_id(task) %>" class="<%= task.completed? ? 'completed' : nil %>">
      <%= check_box_tag 'completed', task.id, task.completed,
          data: {
            remote: true,
            url: toggle_project_task_path(task.project, task),
            method: :post
          },
          style: "font-size: 300%"
      %>
      <%= task.name %>
    </label>
  </td>
  <td class="task-actions">
    <%= link_to edit_project_task_path(task.project, task),
        class: "btn btn-xs btn-default" do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      Edit
    <% end %>
    <%= link_to [task.project, task], method: :delete,
        data: { confirm: 'Are you sure?' },
        class: "btn btn-default btn-xs" do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      Delete
    <% end %>
  </td>
</tr>
