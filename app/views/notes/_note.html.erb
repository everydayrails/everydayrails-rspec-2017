<div class="note">
  <div class="note-message">
    <%= simple_format note.message %>
  </div>

  <% if note.attachment.exists? %>
    <div class="note-details">
      <span class="glyphicon glyphicon-file"></span>
      <%= link_to note.attachment_file_name, note.attachment.url %>
      (<%= note.attachment_content_type %>,
      <%= number_to_human_size(note.attachment_file_size) %>)
    </div>
  <% end %>

  <h4 class="note-info">
    <%= note.user_name %>,
    <%= full_date(note.created_at) %>
    <%= link_to edit_project_note_path(note.project, note),
        class: "btn btn-default btn-xs btn-inline" do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      Edit
    <% end %>
    <%= link_to [note.project, note], method: :delete,
        data: { confirm: 'Are you sure?' },
        class: "btn btn-default btn-xs" do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      Delete
    <% end %>
  </h4>
</div>
